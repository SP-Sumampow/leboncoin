{# templates/home/signIn.html.twig #} {% extends "./layout.html.twig" %} 
{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
<section class="signin py-3">
    <form action="{{ path('signIn') }}" method="post" class="signin__form form-container w-50 m-auto container bg-light p-5">
      <h3 class="mb-3">Se connecter</h3>
      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    <!-- Email input -->
    <div class="form-outline mb-3">
      <input type="email" id="form2Example1" class="form-control" name="_username" value="{{ last_username }}"/>
      <label class="form-label" for="form2Example1">Email address</label>
    </div>

    <!-- Password input -->
    <div class="form-outline mb-2">
      <input type="password" name="_password" id="form2Example2" class="form-control" />
      <label class="form-label" for="form2Example2">Password</label>
    </div>

    <!-- 2 column grid layout for inline styling -->
    <div class="row mb-3">
      <div class="col d-flex justify-content-start">
        <!-- Checkbox -->
        <div class="form-check">
          <input
            class="form-check-input"
            type="checkbox"
            value=""
            id="form2Example34"
            checked
          />
          <label class="form-check-label" for="form2Example34">
            Remember me
          </label>
        </div>
      </div>

      <div class="col">
        <!-- Simple link -->
        <a class="text-body t-link" href="#!">Forgot password?</a>
      </div>
    </div>

    <!-- Submit button -->
    <button
      type="submit"
      class="btn btn-secondary--custom btn-block mb-2 text-white"
    >
      Sign in
    </button>

    {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}

    <!-- Register buttons -->
    <div class="text-center text-body">
      <p class="mb-1">
        Not a member?
        <a class="text-body t-link" href="#!">Register</a>
      </p>
    </div>
  </form>
</section>
{% endblock %}
