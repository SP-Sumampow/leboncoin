{# templates/home/ad.html.twig #} 

{% extends "./layout.html.twig" %} 

{% block body %}

    <div class="modal-header">
        <h5 class="modal-title" id="modalLabel">{{ ad.title }}</h5>

    </div>
    <div class="modal-body p-4">
        <div class="d-flex flex-column flex-lg-row">
            <div class="modal-body__img mb-3 mb-lg-0 w-100 w-lg-75">
                <img
                        src="{{ ad.getCoverPicture() }}"
                        class="card-img-top w-100"
                        alt=""
